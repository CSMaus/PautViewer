<UserControl x:Class="PAUTViewer.Views.SidePanelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PAUTViewer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <!-- This panel is used to select config (channel), analyse data (SNR, AI) -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            
            
        <ComboBox
            Margin="5, 0, 5, 0"
            Height="22"
            Width="100"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"
            ToolTip="Color maps"
            ItemsSource="{Binding configNames}"
            SelectedIndex="{Binding SelectedConfigIndex, UpdateSourceTrigger=PropertyChanged}"/>

        <TabControl Grid.Row="1" Margin="2,10,2,2" HorizontalAlignment="Stretch">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}"
               BasedOn="{StaticResource SlimTabItem}" />
            </TabControl.Resources>
            <TabItem Header="View">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <CheckBox Content="B-Scan: Range projection" Grid.Row="0" Margin="2" IsChecked="{Binding IsBscanRangeProjection}"/>
                    <CheckBox Content="D-Scan: Range projection" Grid.Row="1" Margin="2" IsChecked="{Binding IsDscanRangeProjection}"/>
                    <Border Grid.Row="2" Margin="2" BorderThickness="0, 1, 0, 1" BorderBrush="DarkBlue">
                        <CheckBox Content="Sync Scans Axis" IsChecked="{Binding IsSyncScansAxis}"  Margin="0, 5, 0, 5"
                                  ToolTip="Sync axis to be same as in C-Scam: Amplitude"/>
                    </Border>
                    <Border Grid.Row="3" Margin="2" BorderThickness="0, 1, 0, 0" BorderBrush="Azure">
                        <TextBlock Text="C-scan View"/>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="SNR">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                </Grid>
            </TabItem>

            <TabItem Header="AI">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                </Grid>
            </TabItem>


        </TabControl>


    </Grid>
</UserControl>
