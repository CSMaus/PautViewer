<UserControl x:Class="PAUTViewer.Views.PlotPAView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PAUTViewer.Views"
             xmlns:resources="clr-namespace:PAUTViewer.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <resources:ZeroToCollapsedConverter x:Key="ZeroToCollapsed"/>
    </UserControl.Resources>

    <Grid>
        <!--
        <TabControl x:Name="TabsList" ItemsSource="{Binding Channels}" 
                SelectedIndex="{Binding SelectedConfigIndex, Mode=TwoWay}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="" Height="0" Margin="0"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    -->

        <ContentControl Content="{Binding SelectedChannel}">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <!-- This grid should be used with displayin content of SelectedConfigIndex of Channels
                        but it should be not as tab. SelectedConfigIndex variable will be changed in other place-->
                    <Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <!--<RowDefinition Height="{Binding RowHeightBottom}"/>-->
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>



                            <Grid Grid.Row="1" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <ContentControl Content="{Binding CAscan}" Grid.Row="0" Grid.Column="0"/>

                                <GridSplitter Grid.Row="0"  Grid.RowSpan="1" Grid.Column="1" Width="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Style="{StaticResource GradientGridSplitterStyleH}"/>

                                <ContentControl Content="{Binding Bscan}" Grid.Row="0" Grid.Column="2" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"/>

                                <GridSplitter Grid.Row="0"  Grid.RowSpan="1" Grid.Column="3" Width="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Style="{StaticResource GradientGridSplitterStyleH}"/>

                                <ContentControl Content="{Binding CPscan}" Grid.Row="0" Grid.Column="4" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </Grid>

                            <GridSplitter Grid.Row="2" Height="4" HorizontalAlignment="Stretch" Grid.ColumnSpan="5"
                                    Style="{StaticResource GradientGridSplitterStyleV}"/>

                            <Grid Grid.Row="3" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <ContentControl Content="{Binding Dscan}" Margin="5" Grid.Column="0" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"/>

                                <GridSplitter Grid.Row="0"  Grid.RowSpan="1" Grid.Column="1" Width="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                              Style="{StaticResource GradientGridSplitterStyleH}"/>

                                <ContentControl Content="{Binding Ascan}" Margin="2" Grid.Column="2" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"/>

                                <GridSplitter Grid.Row="0"  Grid.RowSpan="1" Grid.Column="3" Width="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Style="{StaticResource GradientGridSplitterStyleH}"/>
                                

                            </Grid>

                        </Grid>

                    </Grid>

                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </Grid>
</UserControl>
