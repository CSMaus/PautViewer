<UserControl x:Class="PAUTViewer.Views.PlotPAView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PAUTViewer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Top-Left: C-scan -->
            <ContentPresenter Grid.Row="0" Grid.Column="0"
                          Content="{Binding Current.Cscan}" />

            <!-- Top-Right: D-scan -->
            <ContentPresenter Grid.Row="0" Grid.Column="1"
                          Content="{Binding Current.Dscan}" />

            <!-- Bottom-Left: A-scan -->
            <ContentPresenter Grid.Row="1" Grid.Column="0"
                          Content="{Binding Current.Ascan}" />

            <!-- Bottom-Right: B-scan -->
            <ContentPresenter Grid.Row="1" Grid.Column="1"
                          Content="{Binding Current.Bscan}" />
        </Grid>
    </Grid>
</UserControl>
