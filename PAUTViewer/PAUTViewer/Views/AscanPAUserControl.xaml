<UserControl x:Class="PAUTViewer.Views.AscanPAUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
             xmlns:local="clr-namespace:PAUTViewer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <s:SciChartSurface x:Name="Surface" xmlns:s="http://schemas.abtsoftware.co.uk/scichart" Margin="-10,0,10,0">

            <!-- X AXES -->
            <s:SciChartSurface.XAxes>
                <s:NumericAxis x:Name="XAxis"
                   AxisTitle="Distance (mm)"
                   DrawMajorGridLines="True"
                   DrawMinorGridLines="True"
                   AutoRange="Never"/>
            </s:SciChartSurface.XAxes>

            <!-- Y AXES (LEFT + RIGHT %) -->
            <s:SciChartSurface.YAxes>
                <s:NumericAxis x:Name="YAxisLeft"
                   AxisAlignment="Left"
                   AxisTitle="Amplitude"
                   AutoRange="Never"/>
                <s:NumericAxis x:Name="YAxisRightPct"
                   AxisAlignment="Right"
                   AutoRange="Never"
                   VisibleRange="0,100"
                   DrawMajorGridLines="False"
                   DrawMinorGridLines="False"
                   TextFormatting="0'%'"/>
            </s:SciChartSurface.YAxes>

            <!-- SERIES -->
            <s:SciChartSurface.RenderableSeries>
                <s:FastLineRenderableSeries x:Name="LineSeries"
                                XAxisId="XMain" YAxisId="LeftAmp"
                                StrokeThickness="2" Stroke="#5EC8FA"
                                DataSeries="{Binding LineDataSeries, ElementName=Root}"/>
                <s:FastLineRenderableSeries x:Name="LineSeriesSoft"
                                XAxisId="XMain" YAxisId="LeftAmp"
                                StrokeThickness="1" Stroke="#808080"
                                DataSeries="{Binding LineDataSeriesSoft, ElementName=Root}"/>
            </s:SciChartSurface.RenderableSeries>

            <!-- ANNOTATIONS -->
            <s:SciChartSurface.Annotations>

                <!-- Vertical Min -->
                <s:VerticalLineAnnotation x:Name="VLineMin"
                              XAxisId="XMain" YAxisId="LeftAmp"
                              IsEditable="True" DragDirections="XDirection"
                              Stroke="#F06539" StrokeThickness="2"
                              StrokeDashArray="4 4" ShowLabel="True">
                    <s:AnnotationLabel x:Name="VMinLabel" LabelPlacement="Top"
                         Text="{Binding X1, ElementName=VLineMin, StringFormat={}{0:0.00} mm}"/>
                </s:VerticalLineAnnotation>

                <!-- Vertical Max -->
                <s:VerticalLineAnnotation x:Name="VLineMax"
                              XAxisId="XMain" YAxisId="LeftAmp"
                              IsEditable="True" DragDirections="XDirection"
                              Stroke="#F06539" StrokeThickness="2"
                              StrokeDashArray="4 4" ShowLabel="True">
                    <s:AnnotationLabel x:Name="VMaxLabel" LabelPlacement="Top"
                         Text="{Binding X1, ElementName=VLineMax, StringFormat={}{0:0.00} mm}"/>
                </s:VerticalLineAnnotation>

                <!-- Horizontal #1 -->
                <s:HorizontalLineAnnotation x:Name="HLine1"
                                XAxisId="XMain" YAxisId="LeftAmp"
                                IsEditable="True" DragDirections="YDirection"
                                Stroke="#C850F5" StrokeThickness="2"
                                StrokeDashArray="3 3" ShowLabel="True">
                    <s:AnnotationLabel x:Name="H1Label" LabelPlacement="Right"/>
                </s:HorizontalLineAnnotation>

                <!-- Horizontal #2 -->
                <s:HorizontalLineAnnotation x:Name="HLine2"
                                XAxisId="XMain" YAxisId="LeftAmp"
                                IsEditable="True" DragDirections="YDirection"
                                Stroke="#C850F5" StrokeThickness="2"
                                StrokeDashArray="3 3" ShowLabel="True">
                    <s:AnnotationLabel x:Name="H2Label" LabelPlacement="Right"/>
                </s:HorizontalLineAnnotation>

            </s:SciChartSurface.Annotations>
        </s:SciChartSurface>

    </Grid>
</UserControl>
