<Window x:Class="PAUTViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAUTViewer"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="PAUT Viewer" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="DarkGray" BorderThickness="0" Margin="2">
            <Frame x:Name="ExplorerFrame" NavigationUIVisibility="Hidden"/>
        </Border>
        <Border BorderBrush="WhiteSmoke" BorderThickness="2" Margin="2" Grid.Row="1">
            <Frame x:Name="PAFrame" NavigationUIVisibility="Hidden"/>
        </Border>
        <Border BorderThickness="0" Margin="2, 5, 2, 2"  Grid.Column="1"  Grid.RowSpan="2" Width="175">
            <Frame x:Name="SidePanelFrame" NavigationUIVisibility="Hidden"/>
        </Border>

    </Grid>
</Window>
