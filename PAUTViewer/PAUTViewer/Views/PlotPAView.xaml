<UserControl x:Class="PAUTViewer.Views.PlotPAView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PAUTViewer.Views"
             xmlns:resources="clr-namespace:PAUTViewer.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <resources:ZeroToCollapsedConverter x:Key="ZeroToCollapsed"/>
    </UserControl.Resources>

    <Grid>
        <TabControl x:Name="TabsList" ItemsSource="{Binding Channels}" 
                SelectedIndex="{Binding SelectedConfigIndex, Mode=TwoWay}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" Height="0" Margin="0"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                    <Grid>
                        <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <!--<RowDefinition Height="{Binding RowHeightBottom}"/>-->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border BorderThickness="0" BorderBrush="DarkGray" Grid.Row="0" Margin="1" MinWidth="120" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text=" SoftGain  " VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SoftGaindB, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         VerticalAlignment="Center" Style="{StaticResource SlimTextBox}"/>
                                <TextBlock Text="  dB" VerticalAlignment="Center" />
                                <Button Content="{DynamicResource applySoftGain}"  Command="{Binding RecalculateSoftGain}" 
                                        VerticalAlignment="Center" Margin="5, 0, 0,0" Style="{StaticResource SlimButton}"/>
                                <Button Content="Update Depth Gates"  Command="{Binding UpdateGates_Click}" 
                                        VerticalAlignment="Center" Margin="15, 0, 0,0" Style="{StaticResource SlimButton}"
                                        ToolTip="Change depth gates in A-scan and press this button to update"/>
                            </StackPanel>
                        </Border>

                        <GridSplitter Grid.Row="1"  Grid.RowSpan="3" Grid.Column="1" Width="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Style="{StaticResource GradientGridSplitterStyleH}"/>

                        <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Background="{DynamicResource Background}" Grid.Row="0" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <ContentControl Content="{Binding Cscan}" Grid.Row="1" />
                            </Grid>

                            <GridSplitter Grid.Row="1" Height="4" HorizontalAlignment="Stretch" Style="{StaticResource GradientGridSplitterStyleV}"/>

                            <Grid Background="{DynamicResource Background}" Grid.Row="2" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <ContentControl Content="{Binding Ascan}"  Grid.Row="1" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </Grid>

                        </Grid>


                        <Grid Grid.Row="1" Grid.Column="2" Grid.RowSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Background="{DynamicResource Background}" Grid.Row="0" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <ContentControl Content="{Binding Dscan}" Grid.Row="1" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </Grid>
                            <GridSplitter Grid.Row="1" Height="4" HorizontalAlignment="Stretch" Style="{StaticResource GradientGridSplitterStyleV}"/>


                                <Grid Background="{DynamicResource Background}" Grid.Row="2" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <ContentControl Content="{Binding Bscan}"  Grid.Row="1" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </Grid>

                        </Grid>

                    </Grid>

                </Grid>

                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>

            <!--
            <ContentPresenter Grid.Row="0" Grid.Column="0"
                          Content="{Binding Current.Cscan}" />

            
            <ContentPresenter Grid.Row="0" Grid.Column="1"
                          Content="{Binding Current.Dscan}" />

            
            <ContentPresenter Grid.Row="1" Grid.Column="0"
                          Content="{Binding Current.Ascan}" />

            
            <ContentPresenter Grid.Row="1" Grid.Column="1"
                          Content="{Binding Current.Bscan}" />
                -->
    </Grid>
</UserControl>
